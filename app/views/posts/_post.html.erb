<div id="<%= dom_id post %>">
  <%= image_tag post.image.variant(resize_to_limit: [600, 600]) if post.image.attached? %>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= post.description %>
  </p>

    <%= link_to "Edit", edit_post_path(post) %>
    <hr class="mt-6">
</div>
